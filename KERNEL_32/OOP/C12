класс молекула
  проц Рост()
    вес := 100
    вывод 'молекула'   
  кон проц
кон класс

класс сгусток(молекула)
  вес,радиус
  проц Взрыв()
    вывод '** >>>!!&&  Взрыв **&(*&)() '
    вес := 1024
    предок.рост()
  кон проц
кон класс

класс планета(сгусток)
  имя
  проц вращение()
    предок.взрыв()
  кон проц
кон класс

объект земля, марс = планета

проц старт()
  вывод земля.вес
  земля.вращение()
  вывод земля.вес
кон проц